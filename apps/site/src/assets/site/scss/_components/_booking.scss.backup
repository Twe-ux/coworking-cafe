// ================================
// Booking Pages - shadcn/ui Style
// ================================

@import "../config/shadcn-variables";
@import "../config/shadcn-mixins";

// Override text-success to use site green color
.text-success {
  color: #588983 !important;
}

// Booking Selection Page (page.tsx)
// --------------------------------
.booking-selection {
  background-color: hsl(var(--background));
  min-height: calc(100vh - 120px);
  padding-bottom: 15rem !important;

  @media (min-width: 470px) {
    padding-bottom: 18rem !important;
    min-height: calc(100vh - 150px);
  }
  @media (min-width: 837px) {
    padding-bottom: 20rem !important;
    min-height: calc(100vh - 200px);
  }

  // Padding left/right pour mobile uniquement
  .row.g-4 {
    padding-left: var(--spacing-8);
    padding-right: var(--spacing-8);

    @media (min-width: 768px) {
      padding-left: 0;
      padding-right: 0;
    }
  }
}

.space-card {
  @include card;
  @include transition-all;
  cursor: pointer;
  overflow: hidden;
  height: 100%;
  display: flex;
  flex-direction: column;

  &:hover {
    box-shadow: var(--shadow-lg);
    border-color: hsl(var(--ring) / 0.5);
    transform: translateY(-4px);

    .space-image {
      transform: scale(1.05);
    }

    .card-overlay {
      opacity: 1;
    }
  }
}

.card-image-container {
  position: relative;
  height: 200px;
  overflow: hidden;
  background: linear-gradient(
    135deg,
    hsl(var(--primary)) 0%,
    hsl(var(--primary) / 0.8) 100%
  );
  flex-shrink: 0;

  @media (min-width: 769px) {
    height: 180px;
  }
}

.space-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  @include transition-all;
}

.space-icon-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: hsl(var(--primary-foreground));
  font-size: 2.5rem;

  @media (min-width: 769px) {
    font-size: 3rem;
  }
}

.card-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: hsl(var(--primary) / 0.9);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.overlay-content {
  color: hsl(var(--primary-foreground));
  text-align: center;
  font-size: 0.9375rem;
  font-weight: 600;

  i {
    font-size: 2.5rem;
    display: block;
    margin-bottom: var(--spacing-2);
  }
}

.card-content {
  padding: var(--spacing-5);
  display: flex;
  flex-direction: column;
  flex: 1;
  min-height: 0;
}

.card-title {
  font-size: 1.1rem;
  font-weight: 700;
  color: hsl(var(--foreground));
  margin-bottom: var(--spacing-1);

  @media (min-width: 769px) {
    font-size: 1.25rem;
  }
}

.card-subtitle {
  font-size: 0.8125rem;
  color: hsl(var(--muted-foreground));
  margin-bottom: 0;
}

.price-badge {
  @include badge-primary;
  padding: var(--spacing-2) var(--spacing-3);
  font-size: 0.8125rem;
}

.price-badge-hourly {
  @include badge-secondary;
  padding: var(--spacing-2) var(--spacing-3);
  font-size: 0.75rem;
  font-weight: 500;
  background-color: hsl(var(--muted));
  color: hsl(var(--muted-foreground));
  border: 1px solid hsl(var(--border));
}

.price-badge-daily {
  @include badge-primary;
  padding: var(--spacing-2) var(--spacing-3);
  font-size: 0.75rem;
  font-weight: 600;
  background-color: #588983;
  color: white;
}

.p-19 {
  padding: 19px 0;
}

.price-badge-quote {
  @include badge-primary;
  padding: var(--spacing-2) var(--spacing-6);
  font-size: 0.875rem;
  font-weight: 600;
  background-color: #588983;
  color: white;
  min-height: 30px;
  min-width: 150px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.capacity-info {
  display: flex;
  align-items: center;
  font-size: 0.875rem;
  color: hsl(var(--foreground));

  i {
    color: #588983;
  }
}

.pricing-badges {
  display: flex;
  gap: var(--spacing-2);
  flex-wrap: wrap;
  justify-content: flex-end;
}

// TTC/HT Toggle Switch
.tax-toggle {
  font-size: 0.875rem;
  font-weight: 500;
  color: hsl(var(--muted-foreground));
  @include transition-all;

  &.active {
    color: #588983;
    font-weight: 600;
  }

  &:hover {
    color: #588983;
  }
}

.form-check-input {
  &:checked {
    background-color: #588983;
    border-color: #588983;
  }

  &:focus {
    box-shadow: 0 0 0 0.25rem rgba(88, 137, 131, 0.25);
    border-color: #588983;
  }
}

.card-description {
  color: hsl(var(--muted-foreground));
  font-size: 0.875rem;
  margin: var(--spacing-3) 0;
  line-height: 1.5;
  flex: 1;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

.card-meta {
  border-top: 1px solid hsl(var(--border));
  padding-top: var(--spacing-3);
  margin-top: var(--spacing-3);
}

.meta-item {
  color: hsl(var(--muted-foreground));
  font-size: 0.8125rem;
  margin-bottom: var(--spacing-2);
  font-weight: 500;
  display: flex;
  align-items: center;
  gap: var(--spacing-2);
}

.features-list {
  display: flex;
  flex-wrap: wrap;
  gap: var(--spacing-2);
  min-height: 32px;
  flex-shrink: 0;
}

.feature-badge {
  @include badge-secondary;
  font-size: 0.75rem;
}

// Custom Breadcrumb - Shared across all booking pages
// --------------------------------
.custom-breadcrumb {
  padding: var(--spacing-3) 0;
  margin-bottom: var(--spacing-2);

  .breadcrumb-link {
    background: transparent;
    border: none;
    outline: none;
    font-size: 0.8125rem;
    font-weight: 500;
    color: hsl(var(--muted-foreground));
    padding: 0;
    @include transition-all;
    cursor: pointer;
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-2);

    i {
      margin-right: 0;
    }

    &:hover {
      color: hsl(var(--foreground));
    }

    &:focus {
      outline: none;
      box-shadow: none;
    }
  }

  .breadcrumb-current {
    font-weight: 600;
    font-size: 0.9375rem;
    color: hsl(var(--foreground));
  }
}

// Booking Date Page
// --------------------------------
.booking-date-page {
  background-color: hsl(var(--background));
  min-height: 95vh;
  padding: var(--spacing-6) 0 12rem !important;

  @media (min-width: 470px) and (max-width: 836px) {
    padding: var(--spacing-6) 0 10rem !important;
  }
}

.booking-card {
  @include card;
  margin-bottom: var(--spacing-5);
  padding: var(--spacing-6);

  @media (min-width: 769px) {
    padding: var(--spacing-8);
  }
}

.selected-space-badge {
  @include badge-secondary;
  display: inline-block;
  padding: var(--spacing-2) var(--spacing-6);
  margin-top: var(--spacing-4);
}

.reservation-types-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: var(--spacing-4);

  @media (min-width: 769px) {
    grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
  }
}

.reservation-type-btn {
  @include btn-outline;
  @include btn-lg;
  flex-direction: column;
  gap: var(--spacing-2);
  padding: var(--spacing-6) var(--spacing-4);
  height: auto;

  i {
    font-size: 1.5rem;
  }

  &.active {
    @include btn-primary;
  }
}

.time-slots-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(70px, 1fr));
  gap: var(--spacing-2);
  max-height: 300px;
  overflow-y: auto;
  padding: var(--spacing-2);

  @media (min-width: 769px) {
    grid-template-columns: repeat(auto-fill, minmax(80px, 1fr));
  }
}

.time-slot-btn {
  @include btn-outline;
  @include btn-sm;
  font-size: 0.8125rem;

  &.active {
    @include btn-primary;
  }

  &.disabled {
    opacity: 0.4;
    cursor: not-allowed;
  }
}

.price-summary {
  background-color: hsl(var(--muted));
  border-radius: var(--radius-lg);
  padding: var(--spacing-6);
  text-align: center;
  animation: fadeInScale 0.4s ease-out;
}

@keyframes fadeInScale {
  from {
    opacity: 0;
    transform: scale(0.95) translateY(-10px);
  }
  to {
    opacity: 1;
    transform: scale(1) translateY(0);
  }
}

.price-display {
  font-size: 2.5rem;
  font-weight: 700;
  color: hsl(var(--foreground));
  margin: var(--spacing-2) 0;

  @media (min-width: 769px) {
    font-size: 2.25rem;
  }
}

.btn-success {
  @include btn-primary;
  @include btn-lg;
  width: 100%;
  font-weight: 600;
}

// Booking Details Page
// --------------------------------
.booking-details-page {
  background-color: hsl(var(--background));
  min-height: 115vh;
  padding: var(--spacing-6) 0 15rem !important;

  @media (min-width: 769px) {
    padding: var(--spacing-10) 0 12.5rem 0 !important;
  }

  // Stat cards (for contact info, account info, etc.)
  .stat-card {
    @include card;
    padding: var(--spacing-5);
    @include transition-all;

    &:hover {
      box-shadow: var(--shadow-md);
    }

    h2.h6 {
      color: hsl(var(--foreground));
      font-size: 0.9375rem;
    }

    i.text-primary {
      font-size: 1.125rem;
    }
  }

  // Form labels
  .form-label {
    font-weight: 500;
    color: hsl(var(--foreground));
    margin-bottom: var(--spacing-2);
    font-size: 0.875rem;
  }

  // Filter buttons for service categories
  .filter-btn {
    @include btn-outline;
    @include btn-sm;
    font-size: 0.8125rem;

    &:hover {
      @include btn-ghost;
    }
  }
}

.people-counter {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-6) var(--spacing-4);
  border-radius: var(--radius-lg);

  @media (min-width: 769px) {
    padding: var(--spacing-6);
  }
}

.counter-btn {
  @include btn-outline;
  width: 40px;
  height: 40px;

  padding: 0;
  font-size: 1.25rem;

  &:hover:not(:disabled) {
    @include btn-primary;
  }

  @media (min-width: 769px) {
    width: 42px;
    height: 42px;
  }
}

.counter-display {
  text-align: center;
  min-width: 120px;
}

.counter-number {
  font-size: 2.5rem;
  font-weight: 700;
  color: hsl(var(--foreground));
  line-height: 1;
  margin-bottom: var(--spacing-2);

  @media (min-width: 769px) {
    font-size: 2.25rem;
  }
}

.counter-label {
  color: hsl(var(--muted-foreground));
  font-weight: 500;
  font-size: 0.9375rem;
}

.form-label {
  font-weight: 500;
  color: hsl(var(--foreground));
  margin-bottom: var(--spacing-2);
  font-size: 0.875rem;
}

.form-control,
.form-control-lg {
  @include input;
  height: 2.75rem;

  &.form-control-lg {
    height: 3rem;
    padding: var(--spacing-3) var(--spacing-4);
  }
}

// Booking Summary Page
// --------------------------------
.booking-summary-page {
  background-color: hsl(var(--background));
  min-height: 120vh;
  padding: var(--spacing-6) 0 15rem !important;

  @media (min-width: 470px) {
    padding: var(--spacing-6) 0 18rem !important;
  }

  @media (min-width: 769px) {
    padding: var(--spacing-10) 0 20rem !important;
  }

  // Force equal height columns
  .row.g-3 {
    @media (min-width: 992px) {
      > [class*="col-"] {
        display: flex;
        flex-direction: column;
      }
    }
  }
}

// Checkout Page & Confirmation Page
// --------------------------------
.checkout-page,
.confirmation-page {
  background-color: hsl(var(--background));
  min-height: 100vh;
  padding: var(--spacing-4) 0 8rem !important;

  @media (min-width: 470px) {
    padding: var(--spacing-5) 0 10rem !important;
  }

  @media (min-width: 769px) {
    padding: var(--spacing-10) 0 12rem !important;
  }

  .text-success {
    color: #588983 !important;
  }

  .bg-success {
    background-color: #588983 !important;
  }

  .spinner-border.text-success {
    color: #588983 !important;
  }
}

// Compact spacing for mobile on confirmation page
.confirmation-page {
  // Reduce margins between summary rows in mobile
  .summary-row {
    margin-bottom: var(--spacing-2) !important;
    align-items: flex-start;

    @media (min-width: 769px) {
      margin-bottom: var(--spacing-3);
      align-items: center;
    }
  }

  // Compact booking card padding in mobile
  .booking-card {
    padding: var(--spacing-4);

    @media (min-width: 769px) {
      padding: var(--spacing-6);
    }
  }

  // Reduce success icon size in mobile
  .success-icon i {
    font-size: 3rem !important;

    @media (min-width: 769px) {
      font-size: 4rem !important;
    }
  }

  // Compact labels and values
  .summary-label {
    font-size: 0.6875rem;
    margin-bottom: 0.25rem;

    @media (min-width: 769px) {
      font-size: 0.75rem;
    }
  }

  .summary-value {
    font-size: 0.875rem;

    @media (min-width: 769px) {
      font-size: 0.9375rem;
    }
  }

  // Reduce divider margins
  .price-divider {
    margin: var(--spacing-2) 0 !important;

    @media (min-width: 769px) {
      margin: var(--spacing-3) 0 !important;
    }
  }

  // Compact badge spacing
  .badge {
    font-size: 0.7rem;
    padding: 0.25rem 0.5rem;

    @media (min-width: 769px) {
      font-size: 0.75rem;
      padding: 0.375rem 0.75rem;
    }
  }
}

// Carte principale
.booking-card {
  box-shadow: var(--shadow-sm);

  &:hover {
    box-shadow: var(--shadow-md);
  }
}

.sticky-card {
  position: static;
  top: 20px;

  @media (min-width: 993px) {
    position: sticky;
  }
}

.summary-section {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;

  // Override inline style
}

.summary-row {
  display: flex;
  flex-direction: row;
  gap: var(--spacing-2);
  justify-content: space-between;
  align-items: center;
  padding: 0;
  @include transition-all;

  @media (min-width: 769px) {
    gap: var(--spacing-4);
  }
}

.summary-label {
  font-weight: 600;
  color: hsl(var(--muted-foreground));
  min-width: 90px;
  font-size: 0.75rem;
  text-transform: uppercase;
  letter-spacing: 0.08em;
  flex-shrink: 0;

  @media (min-width: 769px) {
    min-width: 120px;
  }
}

.summary-value {
  text-align: right;
  color: hsl(var(--foreground));
  flex: 1;
  font-size: 0.9375rem;
  font-weight: 500;
  line-height: 1.5;

  small {
    display: block;
    margin-top: var(--spacing-1);
    color: hsl(var(--muted-foreground));
    font-weight: 400;
    font-size: 0.8125rem;
  }
}

.services-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-3);
}

.service-item {
  @include card;
  padding: var(--spacing-4);
  @include transition-all;

  &.selected {
    border-color: hsl(var(--ring));
    background: hsl(var(--accent));
  }
}

.service-checkbox {
  display: flex;
  align-items: flex-start;
  gap: var(--spacing-3);

  input[type="checkbox"] {
    margin-top: var(--spacing-1);
    width: 20px;
    height: 20px;
    cursor: pointer;
    @include focus-ring;
  }

  label {
    flex: 1;
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    cursor: pointer;
    margin: 0;
  }
}

.service-name {
  font-weight: 600;
  color: hsl(var(--foreground));
  margin-bottom: var(--spacing-1);
  font-size: 0.875rem;
}

.service-description {
  font-size: 0.8125rem;
  color: hsl(var(--muted-foreground));
}

.service-price {
  font-weight: 600;
  color: hsl(var(--primary));
  white-space: nowrap;
  margin-left: var(--spacing-4);
  font-size: 0.875rem;
}

.service-quantity {
  display: flex;
  align-items: center;
  gap: var(--spacing-4);
  margin-top: var(--spacing-3);
  padding-top: var(--spacing-3);
  border-top: 1px solid hsl(var(--border));

  button {
    @include btn-outline;
    width: 32px;
    height: 32px;
    border-radius: 50%;
    padding: 0;
    font-size: 0.875rem;

    &:hover:not(:disabled) {
      @include btn-primary;
    }
  }

  span {
    font-weight: 600;
    min-width: 30px;
    text-align: center;
  }
}

.price-breakdown {
  background: linear-gradient(
    135deg,
    hsl(var(--muted)) 0%,
    hsl(var(--muted) / 0.5) 100%
  );
  padding: var(--spacing-5);
  border-radius: var(--radius-lg);
  border: 1px solid hsl(var(--border) / 0.5);
}

.price-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-2);
  font-size: 0.875rem;
  @include transition-all;

  &:last-of-type:not(.total-row) {
    margin-bottom: 0;
  }

  &.small {
    font-size: 0.8125rem;
    color: hsl(var(--muted-foreground));
    padding: var(--spacing-1) 0;

    span:last-child {
      font-weight: 500;
    }
  }

  &.total-row {
    font-size: 1rem;
    font-weight: 700;
    margin-bottom: 0;
    margin-top: var(--spacing-3);
    padding-top: var(--spacing-4);
    border-top: 2px solid hsl(var(--primary) / 0.2);

    @media (min-width: 769px) {
      font-size: 1.125rem;
    }
  }
}

.price-divider {
  height: 1px;
  background: linear-gradient(
    90deg,
    transparent,
    hsl(var(--border)),
    transparent
  );
  margin: var(--spacing-1) 0;
}

.total-price {
  color: #588983;
  font-size: 1.5rem;
  font-weight: 700;
  letter-spacing: -0.02em;

  @media (min-width: 769px) {
    font-size: 1.75rem;
  }
}

// Service item cards in summary
.service-item-card {
  @include transition-all;
  border-color: hsl(var(--border) / 0.6) !important;

  &:hover {
    border-color: hsl(var(--ring) / 0.4) !important;
    box-shadow: var(--shadow-sm);
  }

  .btn-ghost {
    color: hsl(var(--muted-foreground));

    &:hover {
      color: hsl(var(--destructive));
      background-color: hsl(var(--destructive) / 0.1);
    }
  }

  .btn-outline-secondary {
    @include btn-outline;
    border-radius: var(--radius);

    &:disabled {
      opacity: 0.3;
    }
  }
}

// Actions section
.actions-section {
  .btn-success {
    @include btn-primary;
    @include transition-all;
    box-shadow: var(--shadow-sm);

    &:hover:not(:disabled) {
      box-shadow: var(--shadow-md);
      transform: translateY(-1px);
    }

    &:active:not(:disabled) {
      transform: translateY(0);
    }
  }
}

.btn-outline-success {
  @include btn-outline;
  @include btn-lg;
  width: 100%;
  font-weight: 600;

  &:hover:not(:disabled) {
    background-color: hsl(var(--accent));
  }
}

// Custom DatePicker - shadcn style
// --------------------------------
.custom-datepicker {
  @include card;
  padding: var(--spacing-4);
  background: hsl(var(--card));

  @media (max-width: 576px) {
    padding: var(--spacing-3);
  }
}

.datepicker-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-3);
  padding-bottom: var(--spacing-3);
  border-bottom: 1px solid hsl(var(--border));
}

.datepicker-month-year {
  font-weight: 700;
  font-size: 0.9375rem;
  color: hsl(var(--foreground));
  letter-spacing: 0.3px;
}

.datepicker-nav-btn {
  @include btn-ghost;
  @include btn-sm;
  width: 32px;
  height: 32px;
  border-radius: 50%;
  padding: 0;

  i {
    font-size: 0.8125rem;
  }
}

.datepicker-days-header {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: var(--spacing-1);
  margin-bottom: var(--spacing-2);

  @media (max-width: 576px) {
    gap: 2px;
    margin-bottom: var(--spacing-1);
  }
}

.datepicker-day-name {
  text-align: center;
  font-size: 0.6875rem;
  font-weight: 700;
  color: hsl(var(--muted-foreground));
  padding: var(--spacing-2) 0;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 0;

  @media (max-width: 576px) {
    font-size: 0.625rem;
    padding: 6px 0;
    letter-spacing: 0;
  }
}

.datepicker-days-grid {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: var(--spacing-1);

  @media (max-width: 576px) {
    gap: 2px;
  }
}

.datepicker-day {
  aspect-ratio: 1;
  min-height: 38px;
  width: 100%;
  @include btn-ghost;
  @include btn-sm;
  border-radius: var(--radius);
  font-size: 0.8125rem;
  font-weight: 600;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;

  @media (max-width: 576px) {
    min-height: 32px;
    font-size: 0.75rem;
    border-radius: 4px;
  }

  &:hover:not(.disabled):not(.empty) {
    background-color: hsl(var(--accent));
  }

  &.empty {
    border: none;
    background: transparent;
    cursor: default;
  }

  &.selected {
    @include btn-primary;
    font-weight: 700;
  }

  &.in-range {
    background-color: hsl(var(--accent));
    color: hsl(var(--accent-foreground));
  }

  &.today {
    border: 2px solid hsl(var(--ring));
    font-weight: 700;

    @media (max-width: 576px) {
      border-width: 1px;
    }
  }

  &.disabled {
    opacity: 0.25;
    cursor: not-allowed;
    background-color: transparent;
  }
}

.datepicker-period-info {
  margin-top: var(--spacing-3);
  padding-top: var(--spacing-3);
  border-top: 1px solid hsl(var(--border));
  font-size: 0.75rem;
  color: hsl(var(--primary));
  text-align: center;
  background-color: hsl(var(--muted));
  padding: var(--spacing-3);
  border-radius: var(--radius);

  strong {
    display: block;
    margin-bottom: var(--spacing-1);
    font-weight: 700;
  }
}

// Booking Accordion Sections
// --------------------------------
.booking-section {
  @include card;
  margin-bottom: var(--spacing-4);
  overflow: hidden;
  @include transition-all;
}

.booking-section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: var(--spacing-3) var(--spacing-4);
  cursor: pointer;
  background-color: hsl(var(--muted));
  @include transition-all;

  &:hover {
    background-color: hsl(var(--muted) / 0.8);
  }

  &.active {
    background-color: hsl(var(--accent));
    border-bottom: 1px solid hsl(var(--border));
  }
}

.section-header-left {
  display: flex;
  align-items: center;
  gap: var(--spacing-2);

  i {
    font-size: 1rem;
    color: hsl(var(--primary));
  }

  span {
    font-weight: 600;
    font-size: 0.8125rem;
    color: hsl(var(--foreground));
  }
}

.section-header-right {
  display: flex;
  align-items: center;
  gap: var(--spacing-2);

  .section-value {
    font-size: 0.75rem;
    color: hsl(var(--muted-foreground));
  }

  i {
    font-size: 0.75rem;
    color: hsl(var(--muted-foreground));
    transition: transform 0.2s ease;
  }

  &.expanded i {
    transform: rotate(180deg);
  }
}

.booking-section-content {
  padding: var(--spacing-4);
  border-top: 1px solid hsl(var(--border));
  animation: slideDown 0.3s cubic-bezier(0.4, 0, 0.2, 1);

  &.closing {
    animation: slideUp 0.3s cubic-bezier(0.4, 0, 0.2, 1) forwards;
  }
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-10px);
    max-height: 0;
  }
  to {
    opacity: 1;
    transform: translateY(0);
    max-height: 2000px;
  }
}

@keyframes slideUp {
  from {
    opacity: 1;
    transform: translateY(0);
    max-height: 2000px;
  }
  to {
    opacity: 0;
    transform: translateY(-10px);
    max-height: 0;
  }
}

// Services Modal Styling
// --------------------------------
.modal {
  &.show {
    backdrop-filter: blur(4px);
  }

  .modal-dialog {
    @media (min-width: 576px) {
      max-width: 540px;
    }
  }

  .modal-content {
    @include card;
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-lg);
    border: none;
  }

  .modal-header {
    background: linear-gradient(135deg, #588983 0%, hsl(var(--primary)) 100%);
    color: hsl(var(--primary-foreground));
    border-bottom: none;
    padding: var(--spacing-5);

    .modal-title {
      font-weight: 700;
      font-size: 1.125rem;
      color: hsl(var(--primary-foreground));
    }

    .btn-close {
      filter: brightness(0) invert(1);
      opacity: 0.9;
      @include transition-all;

      &:hover {
        opacity: 1;
        transform: rotate(90deg);
      }
    }
  }

  .modal-body {
    padding: var(--spacing-5);
    max-height: 60vh;
    overflow-y: auto;

    // Custom scrollbar
    &::-webkit-scrollbar {
      width: 8px;
    }

    &::-webkit-scrollbar-track {
      background: hsl(var(--muted));
      border-radius: var(--radius);
    }

    &::-webkit-scrollbar-thumb {
      background: #588983;
      border-radius: var(--radius);

      &:hover {
        background: hsl(var(--primary));
      }
    }
  }

  .modal-footer {
    background-color: hsl(var(--muted) / 0.3);
    border-top: 1px solid hsl(var(--border));
    padding: var(--spacing-4) var(--spacing-5);

    .btn-secondary {
      @include btn-outline;
      background-color: transparent;
      border-color: hsl(var(--border));

      &:hover {
        background-color: hsl(var(--accent));
        border-color: hsl(var(--ring));
      }
    }
  }
}

// Service items in modal
.services-list {
  .service-item {
    @include card;
    padding: var(--spacing-4);
    margin-bottom: var(--spacing-3);
    border-width: 2px;
    @include transition-all;
    cursor: pointer;

    &:last-child {
      margin-bottom: 0;
    }

    &:hover {
      border-color: hsl(var(--ring) / 0.5);
      box-shadow: var(--shadow-sm);
    }

    &.border-success {
      border-color: #588983 !important;
      background: linear-gradient(
        135deg,
        rgba(88, 137, 131, 0.05) 0%,
        rgba(88, 137, 131, 0.02) 100%
      );
      box-shadow: 0 0 0 3px rgba(88, 137, 131, 0.1);
    }

    // Custom checkbox styling
    .form-check-input {
      width: 20px;
      height: 20px;
      border: 2px solid hsl(var(--border));
      border-radius: var(--radius);
      cursor: pointer;
      @include transition-all;
      @include focus-ring;

      &:hover {
        border-color: #588983;
      }

      &:checked {
        background-color: #588983;
        border-color: #588983;
        box-shadow: 0 2px 4px rgba(88, 137, 131, 0.3);
      }

      &:focus {
        box-shadow: 0 0 0 3px rgba(88, 137, 131, 0.2);
      }
    }

    label {
      cursor: pointer;
      user-select: none;

      .fw-semibold {
        color: hsl(var(--foreground));
        font-size: 0.9375rem;
        font-weight: 600;
      }

      .text-muted {
        color: hsl(var(--muted-foreground));
        font-size: 0.8125rem;
        line-height: 1.4;
      }

      .text-nowrap {
        color: hsl(var(--foreground));
        font-weight: 700;

        .text-success {
          color: #588983 !important;
          font-weight: 500;
        }
      }
    }

    // Quantity controls in modal
    .d-flex.align-items-center.mt-2 {
      background-color: hsl(var(--muted) / 0.3);
      padding: var(--spacing-3);
      border-radius: var(--radius-md);
      border: 1px solid hsl(var(--border) / 0.5);

      label {
        font-weight: 600;
        color: hsl(var(--foreground));
        margin-bottom: 0;
      }
    }

    .btn-group {
      display: flex;
      gap: var(--spacing-3);
      box-shadow: none;

      .btn-outline-secondary {
        border: 2px solid hsl(var(--border));
        border-radius: var(--radius-md);
        color: hsl(var(--foreground));
        font-weight: 600;
        font-size: 1.125rem;
        padding: 0.375rem 0.75rem;
        min-width: 38px;
        @include transition-all;
        background-color: hsl(var(--background));
        box-shadow: var(--shadow-sm);

        &:not(:disabled):hover {
          background-color: #588983;
          border-color: #588983;
          color: hsl(var(--primary-foreground));
          transform: scale(1.05);
        }

        &:not(:disabled):active {
          transform: scale(0.95);
        }

        &:disabled {
          background-color: hsl(var(--muted));
          color: hsl(var(--muted-foreground));
          opacity: 0.5;
          cursor: not-allowed;
        }

        &:focus {
          box-shadow: none;
          outline: none;
        }

        // Middle button (quantity display)
        &:nth-child(2) {
          font-weight: 700;
          color: #3d6661;
          min-width: 50px;
          background-color: hsl(var(--background));
          border-color: hsl(var(--border));
          pointer-events: none;
        }
      }
    }
  }
}
